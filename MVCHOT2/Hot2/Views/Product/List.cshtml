@*
    PRODUCT INDEX
*@
@{
}

@model List<Product>



<h1> Product</h1>




<table class="table  table-responsive   table-striped  border  border-secondary   ">


    <thead class="">
        <tr>
            <th>Name</th>
            <th>Short Description</th>
            <th>Long Description</th>
            <th>Image</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Category</th>
            <th></th>
            <th></th>
        </tr>
    </thead>

    @foreach (var product in Model)
    {

        <tr>
            <td>@product.ProductName</td>
            <td>@product.ProductDescShort</td>
            <td>@product.ProductDescLong</td>
            <td>@product.ProductImage</td>
            <td>@product.ProductPrice?.ToString("C")</td>
            <td>@product.ProductQty</td>
            <td>@product.Category.CategoryName</td>

            <td>
                <a asp-controller="Product" asp-action="AddEdit" asp-route-id="@product.ProductID" asp-route-slug="@product.Slug" class="btn btn-outline-primary">Edit</a>
            </td>
            <td>
                <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.ProductID" asp-route-slug="@product.Slug" class="btn btn-outline-danger">Delete</a>
            </td>
        </tr>
    }


</table>


<div>
    <a asp-controller="Product" asp-action="Add" class="btn btn-outline-primary">Add Product</a>
</div>